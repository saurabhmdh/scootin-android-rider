<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="data"
            type="com.scootin.network.response.NormalOrderResponse.OrderInventoryDetails"/>

    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                app:setImage="@{data.inventoryDetails.productImage.url}"
                android:layout_marginLeft="8dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.inventoryDetails.title}"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_toRightOf="@id/item_img"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount:"
                android:layout_below="@id/item_name"
                android:layout_toRightOf="@id/item_img"
                android:layout_marginLeft="8dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:setPrice="@{data.inventoryDetails.price}"
                android:layout_below="@id/item_name"
                android:layout_toRightOf="@id/txt_amount" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Qty : "
                android:layout_marginLeft="4dp"
                android:layout_below="@id/item_name"
                android:layout_toRightOf="@id/amount" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:setToIntText="@{data.quantity}"
                android:layout_below="@id/item_name"
                android:layout_toRightOf="@id/txt_qty" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:layout_below="@id/item_name"
                android:layout_toRightOf="@id/qty" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="data"
            type="com.scootin.network.response.NormalOrderResponse"/>

    </data>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:paddingBottom="10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/pending_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"

                app:srcCompat="@drawable/ic_accepted_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount :"
                android:textSize="18sp"
                android:layout_toRightOf="@id/pending_icon"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:textColor="#000"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:setPrice="@{data.orderDetails.totalAmount}"
                android:textSize="18sp"
                android:layout_toRightOf="@id/txt_order_id"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:textColor="#000"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:layout_below="@id/txt_order_id"
                android:layout_toRightOf="@id/pending_icon"
                android:layout_marginLeft="8dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.orderDetails.orderStatus}"
                android:layout_below="@id/txt_order_id"
                android:layout_toRightOf="@id/txt_status"
                android:layout_marginLeft="8dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-06-24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"/>

        </RelativeLayout >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_corner"
            android:padding="12dp"
            android:text="Item List"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_below="@id/cardview"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item_list"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_Customer_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_corner"
            android:padding="12dp"
            android:text="Customer Details"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_below="@id/recycler_view"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.orderDetails.userInfo.firstName}"
            android:textColor="#000"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_below="@id/txt_Customer_details"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_delivery_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Address"
            android:textSize="15sp"
            android:layout_below="@id/txt_customer_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/delivery_address_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setOneLineAddress="@{data.orderDetails.addressDetails}"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_below="@id/txt_delivery_address"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/ic_location_icon"
            android:drawablePadding="4dp"
            android:layout_marginTop="2dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telephone"
            android:textSize="15sp"
            android:layout_below="@id/delivery_address_line1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.orderDetails.userInfo.mobileNumber}"
            android:textColor="#000"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_call"
            android:drawablePadding="4dp"
            android:layout_below="@id/txt_telephone"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_order_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_corner"
            android:padding="12dp"
            android:text="Order Details"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_below="@id/telephone"
            android:layout_marginLeft="16dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal"

            android:textColor="#000"
            android:textSize="15sp"
            android:layout_below="@id/txt_order_details"
            android:padding="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subtotal_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$95"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:layout_below="@id/txt_order_details"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:layout_marginTop="2dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtotal"
            android:layout_marginTop="2dp"
            android:text="Tax"
            android:padding="4dp"
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:textSize="15sp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tax_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:layout_below="@id/subtotal_amt"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:layout_marginTop="2dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/grand_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GrandTotal"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_below="@id/tax"
            android:padding="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/grangtotal_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$95"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:layout_below="@id/tax_amt"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:layout_marginTop="2dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/showMap"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="@drawable/green_rectangle"
            android:layout_below="@id/grand_total"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Show on map "
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="#3cb043"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="@drawable/green_rectangle"
            android:layout_below="@id/showMap"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="Set As Delivered"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="#3cb043"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
</layout>